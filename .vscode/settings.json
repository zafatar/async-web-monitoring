{
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "[python]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true,
        "editor.defaultFormatter": "ms-python.flake8",
    },
    "flake8.args": [
        "--max-line-length=88"
    ]
}
